<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            stylesheets="@booking.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.BookingManagementController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="280.0" spacing="30" styleClass="sidebar">
            <padding>
                <Insets bottom="30" left="30" right="30" top="40" />
            </padding>

            <!-- Header -->
            <VBox spacing="4">
                <Label styleClass="brand" text="AutoRide" />
                <Label styleClass="subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="12" VBox.vgrow="ALWAYS">
                <Button styleClass="nav-item" text="ðŸ  Dashboard"
                        onAction="#showDashboardView" />
                <Button styleClass="nav-item" text="ðŸš— Car Management"
                        onAction="#showCarManagementView" />
                <Button styleClass="nav-item-active" text="ðŸ“… Booking Management"
                        onAction="#showBookingView" />
                <Button styleClass="nav-item" text="ðŸ‘¥ Customer Management"
                        onAction="#showCustomerManagementView" />
                <Button styleClass="nav-item" text="ðŸ‘¤ User Management"
                        onAction="#showUserManagementView" />
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="15">
                <VBox alignment="CENTER" spacing="3">
                    <Label styleClass="admin-name" text="Admin User" />
                    <Label styleClass="admin-email" text="admin@autoride.com" />
                </VBox>
                <Button onAction="#handleLogout"
                        styleClass="logout-btn" text="â» Logout" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" styleClass="main-content">
            <padding>
                <Insets bottom="40" left="50" right="50" top="40" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label fx:id="mainTitle"
                       styleClass="main-title"
                       text="Booking Management" />
                <Pane HBox.hgrow="ALWAYS"/>
                <MenuButton text="All Bookings" fx:id="filterBookings"/>
            </HBox>

            <!-- Booking Table -->
            <TableView fx:id="bookingTable"
                       prefHeight="700.0"
                       styleClass="booking-table">
                <columns>
                    <TableColumn fx:id="idColumn"
                                 text="Booking ID"
                                 prefWidth="80"/>
                    <TableColumn fx:id="customerColumn"
                                 text="Customer"
                                 prefWidth="200"/>
                    <TableColumn fx:id="carColumn"
                                 text="Car"
                                 prefWidth="200"/>
                    <TableColumn fx:id="datesColumn"
                                 text="Dates"
                                 prefWidth="250"/>
                    <TableColumn fx:id="amountColumn"
                                 text="Amount"
                                 prefWidth="120"/>
                    <TableColumn fx:id="statusColumn"
                                 text="Status"
                                 prefWidth="120"/>
                    <TableColumn fx:id="actionsColumn"
                                 text="Actions"
                                 prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>