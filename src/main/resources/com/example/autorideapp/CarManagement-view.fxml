<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            stylesheets="@car-management.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.CarManagementController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="280.0" spacing="30" styleClass="sidebar">
            <padding>
                <Insets bottom="30" left="30" right="30" top="40" />
            </padding>

            <!-- Header -->
            <VBox spacing="4">
                <Label styleClass="brand" text="AutoRide" />
                <Label styleClass="subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="12" VBox.vgrow="ALWAYS">
                <Button styleClass="nav-item" text="ðŸ  Dashboard"
                        onAction="#showDashboardView" />
                <Button styleClass="nav-item-active" text="ðŸš— Car Management"
                        onAction="#showCarManagementView" />
                <Button styleClass="nav-item" text="ðŸ“… Booking Management"
                        onAction="#showBookingView" />
                <Button styleClass="nav-item" text="ðŸ‘¥ Customer Management"
                        onAction="#showCustomerManagementView" />
                <Button styleClass="nav-item" text="ðŸ‘¤ User Management"
                        onAction="#showUserManagementView" />
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="15">
                <VBox alignment="CENTER" spacing="3">
                    <Label styleClass="admin-name" text="Admin User" />
                    <Label styleClass="admin-email" text="admin@autoride.com" />
                </VBox>
                <Button fx:id="logoutButton"
                        styleClass="logout-btn"
                        text="â» Logout"
                        onAction="#handleLogout" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" styleClass="main-content">
            <padding>
                <Insets bottom="40" left="50" right="50" top="40" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label fx:id="mainTitle"
                       styleClass="main-title"
                       text="Car Management" />
                <Pane HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField"
                           promptText="ðŸ” Search cars..."
                           prefWidth="300.0"
                           styleClass="search-field" />
                <!-- âœ… Button now properly wired -->
                <Button fx:id="addCarButton"
                        styleClass="add-btn"
                        text="+ Add Car"
                        onAction="#handleAddCar" />
            </HBox>

            <!-- âœ… Functional Car Table -->
            <TableView fx:id="carTable" styleClass="car-table" prefHeight="700">

                <columns>
                    <TableColumn fx:id="photoColumn" text="Photo" prefWidth="120"/>

                    <!-- CAR NAME + PLATE BELOW -->
                    <TableColumn fx:id="carInfoColumn" text="Car" prefWidth="250"/>

                    <!-- DETAILS (year, type, seats, fuel, transmission) -->
                    <TableColumn fx:id="detailsColumn" text="Details" prefWidth="350"/>

                    <!-- STATUS BADGE -->
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>

                    <!-- PRICE -->
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="150"/>

                    <!-- ACTIONS (icons) -->
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120"/>
                </columns>

            </TableView>

        </VBox>
    </center>
</BorderPane>