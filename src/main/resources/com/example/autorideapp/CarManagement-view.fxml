            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>

            <!-- Header -->
            <VBox spacing="3">
                <Label styleClass="brand" text="AutoRide" />
                <Label styleClass="subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Button prefHeight="49.0" prefWidth="194.0" styleClass="nav-item" text="ðŸ  Dashboard" />
                <Button alignment="CENTER" graphicTextGap="5.0" prefHeight="43.0" prefWidth="169.0" styleClass="nav-item-active" text="ðŸš—  Car Management" textAlignment="JUSTIFY">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button styleClass="nav-item" text="ðŸ“… Booking Management" />
                <Button styleClass="nav-item" text="ðŸ‘¥ Customer Management" />
                <Button styleClass="nav-item" text="ðŸ‘¤ User Management" />
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="10">
                <VBox alignment="CENTER" spacing="3">
                    <Label styleClass="admin-name" text="Admin User" />
                    <Label styleClass="admin-email" text="admin@autoride.com" />
                </VBox>
                <Button contentDisplay="CENTER" prefHeight="27.0" prefWidth="214.0" styleClass="logout-btn" text="â» Logout" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

