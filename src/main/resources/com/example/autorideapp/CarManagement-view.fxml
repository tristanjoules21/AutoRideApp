            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="titleLabel" styleClass="main-title" text="Car Management" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button style="-fx-background-color: green;" styleClass="add-btn" text="+ Add New Car" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="carTable" prefHeight="500.0" styleClass="car-table">
                <columns>
                    <TableColumn prefWidth="200.0" text="Car" />
                    <TableColumn prefWidth="200.0" text="Details" />
                    <TableColumn prefWidth="100.0" text="Status" />
                    <TableColumn prefWidth="120.0" text="Price" />
                    <TableColumn prefWidth="100.0" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
