<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.autorideapp.CarManagementController"
      style="-fx-background-color: #14532d;" padding="30">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Car Management" style="-fx-font-size: 24; -fx-text-fill: white;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="＋ Add New Car" style="-fx-background-color: #166534; -fx-text-fill: white; -fx-background-radius: 10;" />
        <Button text="← Dashboard" style="-fx-background-color: #166534; -fx-text-fill: white; -fx-background-radius: 10;" fx:id="dashboardButton" />
    </HBox>

    <!-- Table Section -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 12;" padding="20">
        <TableView fx:id="carTable">
            <columns>
                <TableColumn text="Car" />
                <TableColumn text="Details" />
                <TableColumn text="Status" />
                <TableColumn text="Price" />
                <TableColumn text="Actions" />
            </columns>
        </TableView>
    </VBox>

    <!-- Example Car Card -->
    <HBox spacing="15" alignment="CENTER_LEFT" padding="15"
          style="-fx-background-color: #f9fafb; -fx-background-radius: 10;">
        <ImageView fitWidth="80" fitHeight="50" style="-fx-background-color: #d1d5db; -fx-background-radius: 10;" />
        <VBox spacing="3">
            <Label text="Toyota Vios" style="-fx-font-size: 14; -fx-text-fill: #111827;" />
            <Label text="ABC-1234" style="-fx-font-size: 12; -fx-text-fill: gray;" />
        </VBox>
        <VBox spacing="3">
            <Label text="2023 · Sedan" style="-fx-font-size: 12; -fx-text-fill: #374151;" />
            <Label text="5 seats · Automatic · Gasoline" style="-fx-font-size: 12; -fx-text-fill: gray;" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Available"
               style="-fx-background-color: #dcfce7; -fx-text-fill: #166534; -fx-padding: 4 8; -fx-background-radius: 10; -fx-font-size: 12;" />
        <Label text="₱2,000/day" style="-fx-text-fill: #166534; -fx-font-size: 13;" />
    </HBox>

</VBox>
