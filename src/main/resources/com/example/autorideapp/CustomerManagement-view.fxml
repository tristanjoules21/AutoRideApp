<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" stylesheets="@booking.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.CustomerManagementController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="230.0" spacing="25" styleClass="sidebar">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>

            <!-- Header -->
            <VBox spacing="3">
                <Label styleClass="brand" text="AutoRide" />
                <Label styleClass="subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Button styleClass="nav-item" text="ðŸ  Dashboard" />
                <Button styleClass="nav-item" text="ðŸš— Car Management" />
                <Button styleClass="nav-item" text="ðŸ“… Booking Management" />
                <Button styleClass="nav-item-active" text="ðŸ‘¥ Customer Management" />
                <Button styleClass="nav-item" text="ðŸ‘¤ User Management" />
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="10">
                <VBox alignment="CENTER" spacing="3">
                    <Label styleClass="admin-name" text="Admin User" />
                    <Label styleClass="admin-email" text="admin@autoride.com" />
                </VBox>
                <Button fx:id="logoutButton" styleClass="logout-btn" text="â» Logout" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <!-- Top Bar (Title + Search + Add Button) -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="mainTitle" styleClass="main-title" text="Customer Management" />
                <Pane HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField"
                           promptText="ðŸ” Search customers..."
                           prefWidth="200.0"
                           style="-fx-background-radius: 6; -fx-border-radius: 6;" />
                <Button fx:id="addCustomerButton"
                        text="+ Add Customer"
                        prefWidth="150.0"
                        styleClass="add-btn" />
            </HBox>

            <!-- Customer Table -->
            <TableView fx:id="customerTable" prefHeight="500.0" styleClass="booking-table">
                <columns>
                    <TableColumn prefWidth="100.0" text="Customer ID" />
                    <TableColumn prefWidth="200.0" text="Name" />
                    <TableColumn prefWidth="250.0" text="Email" />
                    <TableColumn prefWidth="150.0" text="Total Bookings" />
                    <TableColumn prefWidth="150.0" text="Total Spent" />
                    <TableColumn prefWidth="100.0" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
