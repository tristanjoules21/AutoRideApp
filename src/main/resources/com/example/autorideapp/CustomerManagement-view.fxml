<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            stylesheets="@customer.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.CustomerManagementController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="280.0" spacing="30" styleClass="sidebar">
            <padding>
                <Insets bottom="30" left="30" right="30" top="40" />
            </padding>

            <!-- Header -->
            <VBox spacing="4">
                <Label styleClass="brand" text="AutoRide" />
                <Label styleClass="subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="12" VBox.vgrow="ALWAYS">
                <Button styleClass="nav-item" text="ðŸ  Dashboard"
                        onAction="#showDashboardView" />
                <Button styleClass="nav-item" text="ðŸš— Car Management"
                        onAction="#showCarManagementView" />
                <Button styleClass="nav-item" text="ðŸ“… Booking Management"
                        onAction="#showBookingView" />
                <Button styleClass="nav-item-active" text="ðŸ‘¥ Customer Management"
                        onAction="#showCustomerManagementView" />
                <Button styleClass="nav-item" text="ðŸ‘¤ User Management"
                        onAction="#showUserManagementView" />
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="15">
                <VBox alignment="CENTER" spacing="3">
                    <Label styleClass="admin-name" text="Admin User" />
                    <Label styleClass="admin-email" text="admin@autoride.com" />
                </VBox>
                <Button fx:id="logoutButton" styleClass="logout-btn" text="â» Logout"
                        onAction="#handleLogout" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" styleClass="main-content">
            <padding>
                <Insets bottom="40" left="50" right="50" top="40" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label fx:id="mainTitle" styleClass="main-title" text="Customer Management" />
                <Pane HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="ðŸ” Search customers..."
                           prefWidth="300.0" styleClass="search-field" />
                <Button fx:id="addCustomerButton" text="+ Add Customer"
                        prefWidth="180.0" styleClass="add-btn"
                        onAction="#handleAddCustomer" />
            </HBox>

            <!-- âœ… Functional Customer Table -->
            <TableView fx:id="customerTable"
                       prefHeight="700.0"
                       styleClass="customer-table">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Full Name" prefWidth="200"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="250"/>
                    <TableColumn fx:id="passwordColumn" text="Password" prefWidth="200"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
