<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" stylesheets="@booking.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.autorideapp.autoride.BookingManagementController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="230.0" spacing="25" styleClass="sidebar">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>

            <!-- Header -->
            <VBox spacing="3">
                <Label styleClass="brand" text="AutoRide" />
                <Label styleClass="subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Button styleClass="nav-item" text="ðŸ  Dashboard" />
                <Button styleClass="nav-item" text="ðŸš— Car Management" />
                <Button styleClass="nav-item-active" text="ðŸ“… Booking Management" />
                <Button styleClass="nav-item" text="ðŸ‘¥ Customer Management" />
                <Button styleClass="nav-item" text="ðŸ‘¤ User Management" />
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="10">
                <VBox alignment="CENTER" spacing="3">
                    <Label styleClass="admin-name" text="Admin User" />
                    <Label styleClass="admin-email" text="admin@autoride.com" />
                </VBox>
                <Button onAction="#handleLogout" styleClass="logout-btn" text="â» Logout" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="mainTitle" styleClass="main-title" text="Booking Management" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#handleAddBooking" styleClass="add-btn" text="+ Add Booking" />
            </HBox>

            <!-- Booking Table -->
            <TableView fx:id="bookingTable" prefHeight="500.0" styleClass="booking-table">
                <columns>
                    <TableColumn prefWidth="80.0" text="Booking ID" />
                    <TableColumn prefWidth="150.0" text="Customer" />
                    <TableColumn prefWidth="150.0" text="Car" />
                    <TableColumn prefWidth="180.0" text="Dates" />
                    <TableColumn prefWidth="120.0" text="Amount" />
                    <TableColumn prefWidth="100.0" text="Payment" />
                    <TableColumn prefWidth="100.0" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
