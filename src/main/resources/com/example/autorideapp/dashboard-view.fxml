<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            stylesheets="@dashboard.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.DashboardController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="280" spacing="35" styleClass="sidebar" VBox.vgrow="ALWAYS">
            <padding><Insets top="40" left="35" right="35" bottom="40"/></padding>

            <!-- Branding -->
            <VBox spacing="5">
                <Label styleClass="brand" text="AutoRide"/>
                <Label styleClass="subtitle" text="Car Rental System"/>
            </VBox>

            <!-- Navigation -->
            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <Button fx:id="btnDashboard" styleClass="nav-item-active" text="ðŸ  Dashboard" maxWidth="Infinity" onAction="#showDashboardView"/>
                <Button fx:id="btnCarManagement" styleClass="nav-item" text="ðŸš— Car Management" maxWidth="Infinity" onAction="#showCarManagementView"/>
                <Button fx:id="btnBookingManagement" styleClass="nav-item" text="ðŸ“… Booking Management" maxWidth="Infinity" onAction="#showBookingView"/>
                <Button fx:id="btnCustomerManagement" styleClass="nav-item" text="ðŸ‘¥ Customer Management" maxWidth="Infinity" onAction="#showCustomerManagementView"/>
                <Button fx:id="btnUserManagement" styleClass="nav-item" text="ðŸ‘¤ User Management" maxWidth="Infinity" onAction="#showUserManagementView"/>
            </VBox>

            <!-- Admin Info -->
            <VBox spacing="15">
                <VBox alignment="CENTER" spacing="5">
                    <Label styleClass="admin-name" text="Admin User"/>
                    <Label fx:id="adminEmail" styleClass="admin-email" text="admin@autoride.com"/>
                </VBox>
                <Button fx:id="btnLogout" styleClass="logout-btn" text="â» Logout" maxWidth="Infinity" onAction="#onLogoutClick"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="30" styleClass="main-content" VBox.vgrow="ALWAYS">
            <padding><Insets top="40" left="40" right="40" bottom="40"/></padding>

            <!-- Top Cards -->
            <FlowPane hgap="25" vgap="25" prefWrapLength="1200">
                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Total Cars"/>
                    <Label fx:id="totalCarsLabel" styleClass="card-value" text="0"/>
                    <Label fx:id="availableCarsLabel" styleClass="card-sub" text="0 available"/>
                </VBox>

                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Total Bookings"/>
                    <Label fx:id="totalBookingsLabel" styleClass="card-value" text="0"/>
                    <Label fx:id="activeBookingsLabel" styleClass="card-sub" text="0 active"/>
                </VBox>

                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Pending Bookings"/>
                    <Label fx:id="pendingBookingsLabel" styleClass="card-value" text="0"/>
                </VBox>

                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Total Revenue"/>
                    <Label fx:id="totalRevenueLabel" styleClass="card-value" text="â‚±0"/>
                </VBox>
            </FlowPane>

            <!-- Recent Bookings Table -->
            <Label styleClass="section-title" text="Recent Bookings"/>
            <TableView fx:id="recentBookingsTable" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colCustomer" text="Customer" prefWidth="250"/>
                    <TableColumn fx:id="colCar" text="Car" prefWidth="250"/>
                    <TableColumn fx:id="colDates" text="Dates" prefWidth="300"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="180"/>
                    <TableColumn fx:id="colAmount" text="Amount" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
