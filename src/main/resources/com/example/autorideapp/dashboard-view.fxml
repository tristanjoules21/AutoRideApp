<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.autorideapp.autoride.DashboardController"
      prefHeight="1080.0" prefWidth="1920.0"
      stylesheets="@dashboard.css"
>

    <!-- Root HBox: Sidebar + Main Content -->
    <HBox VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">

        <!-- Sidebar (fixed width) -->
        <VBox fx:id="sidebarVBox" prefWidth="280.0" minWidth="280.0" maxWidth="280.0" spacing="35" styleClass="sidebar">
            <padding>
                <Insets bottom="40" left="35" right="35" top="40"/>
            </padding>

            <!-- Header -->
            <VBox spacing="5">
                <Label styleClass="brand" text="AutoRide"/>
                <Label styleClass="subtitle" text="Car Rental System"/>
            </VBox>

            <!-- Navigation -->
            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <Button fx:id="btnDashboard" styleClass="nav-item-active" text="ðŸ  Dashboard" onAction="#showDashboardView" maxWidth="Infinity"/>
                <Button fx:id="btnCarManagement" styleClass="nav-item" text="ðŸš— Car Management" onAction="#showCarManagementView" maxWidth="Infinity"/>
                <Button fx:id="btnBookingManagement" styleClass="nav-item" text="ðŸ“… Booking Management" onAction="#showBookingView" maxWidth="Infinity"/>
                <Button fx:id="btnCustomerManagement" styleClass="nav-item" text="ðŸ‘¥ Customer Management" onAction="#showCustomerManagementView" maxWidth="Infinity"/>
                <Button fx:id="btnUserManagement" styleClass="nav-item" text="ðŸ‘¤ User Management" onAction="#showUserManagementView" maxWidth="Infinity"/>
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="15">
                <VBox alignment="CENTER" spacing="5">
                    <Label styleClass="admin-name" text="Admin User"/>
                    <Label fx:id="adminEmail" styleClass="admin-email" text="admin@autoride.com"/>
                </VBox>
                <Button fx:id="btnLogout" alignment="CENTER" styleClass="logout-btn" text="â» Logout" onAction="#onLogoutClick" maxWidth="Infinity"/>
            </VBox>
        </VBox>

        <!-- Main Content Area (resizable) -->
        <VBox fx:id="mainContent" spacing="30" styleClass="main-content" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40"/>
            </padding>

            <!-- Top Cards -->
            <HBox spacing="25">
                <!-- Total Cars -->
                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Total Cars"/>
                    <Label fx:id="totalCarsLabel" styleClass="card-value" text="0"/>
                    <Label fx:id="availableCarsLabel" styleClass="card-sub" text="0 available"/>
                </VBox>

                <!-- Total Bookings -->
                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Total Bookings"/>
                    <Label fx:id="totalBookingsLabel" styleClass="card-value" text="0"/>
                    <Label fx:id="activeBookingsLabel" styleClass="card-sub" text="0 active"/>
                </VBox>

                <!-- Pending Bookings -->
                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Pending Bookings"/>
                    <Label fx:id="pendingBookingsLabel" styleClass="card-value" text="0"/>
                </VBox>

                <!-- Total Revenue -->
                <VBox prefWidth="260" styleClass="card">
                    <Label styleClass="card-title" text="Total Revenue"/>
                    <Label fx:id="totalRevenueLabel" styleClass="card-value" text="â‚±0"/>
                </VBox>
            </HBox>

            <!-- Recent Bookings Table -->
            <Label styleClass="section-title" text="Recent Bookings"/>
            <TableView fx:id="recentBookingsTable" prefHeight="500.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="80.0" text="ID"/>
                    <TableColumn fx:id="colCustomer" prefWidth="250.0" text="Customer"/>
                    <TableColumn fx:id="colCar" prefWidth="250.0" text="Car"/>
                    <TableColumn fx:id="colDates" prefWidth="300.0" text="Dates"/>
                    <TableColumn fx:id="colStatus" prefWidth="180.0" text="Status"/>
                    <TableColumn fx:id="colAmount" prefWidth="200.0" text="Amount"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox>
