<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            stylesheets="@user.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.UserManagementController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="280.0" spacing="30" styleClass="sidebar">
            <padding>
                <Insets bottom="30" left="30" right="30" top="40" />
            </padding>

            <!-- Header -->
            <VBox spacing="4">
                <Label styleClass="brand" text="AutoRide" />
                <Label styleClass="subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="12" VBox.vgrow="ALWAYS">
                <Button styleClass="nav-item" text="ðŸ  Dashboard" />
                <Button styleClass="nav-item" text="ðŸš— Car Management" />
                <Button styleClass="nav-item" text="ðŸ“… Booking Management" />
                <Button styleClass="nav-item" text="ðŸ‘¥ Customer Management" />
                <Button styleClass="nav-item-active" text="ðŸ‘¤ User Management" />
            </VBox>

            <!-- Admin Info + Logout -->
            <VBox spacing="15">
                <VBox alignment="CENTER" spacing="3">
                    <Label styleClass="admin-name" text="Admin User" />
                    <Label styleClass="admin-email" text="admin@autoride.com" />
                </VBox>
                <Button fx:id="logoutButton" styleClass="logout-btn" text="â» Logout" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" styleClass="main-content">
            <padding>
                <Insets bottom="40" left="50" right="50" top="40" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label fx:id="titleLabel" styleClass="main-title" text="User Management" />
                <Pane HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="ðŸ” Search users..." prefWidth="300.0" styleClass="search-field" />
                <Button fx:id="addUserButton" styleClass="add-btn" text="+ Add User" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="userTable" prefHeight="700.0" styleClass="customer-table">
                <columns>
                    <TableColumn prefWidth="150.0" text="User ID" />
                    <TableColumn prefWidth="250.0" text="Name" />
                    <TableColumn prefWidth="300.0" text="Email" />
                    <TableColumn prefWidth="200.0" text="Position" />
                    <TableColumn prefWidth="200.0" text="Status" />
                    <TableColumn prefWidth="150.0" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
