<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            stylesheets="@user.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.UserManagementController">

    <!-- ===================== Sidebar ===================== -->
    <left>
        <VBox prefWidth="280.0" spacing="30" styleClass="sidebar">
            <padding>
                <Insets bottom="40" left="30" right="30" top="40" />
            </padding>

            <!-- Header -->
            <VBox spacing="5">
                <Label styleClass="sidebar-title" text="AutoRide" />
                <Label styleClass="sidebar-subtitle" text="Car Rental System" />
            </VBox>

            <!-- Navigation -->
            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <Button styleClass="sidebar-button" text="ðŸ  Dashboard" />
                <Button styleClass="sidebar-button" text="ðŸš— Car Management" />
                <Button styleClass="sidebar-button" text="ðŸ“… Booking Management" />
                <Button styleClass="sidebar-button" text="ðŸ‘¥ Customer Management" />
                <Button prefWidth="200.0" styleClass="sidebar-button active" text="ðŸ‘¤ User Management" />
            </VBox>

            <!-- Footer / Admin Info -->
            <VBox spacing="10">
                <Label styleClass="admin-name" text="Admin User" />
                <Label styleClass="admin-email" text="admin@autoride.com" />
                <Button fx:id="logoutButton" styleClass="logout-button" text="â» Logout" />
            </VBox>
        </VBox>
    </left>

    <!-- ===================== Main Content ===================== -->
    <center>
        <VBox prefHeight="1080.0" prefWidth="1640.0" spacing="30" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <!-- Header Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label fx:id="mainTitle" styleClass="main-title" text="User Management" />
                <Pane HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" prefWidth="280" promptText="ðŸ” Search user..." style="-fx-background-radius: 6; -fx-border-radius: 6;" />
                <Button fx:id="addUserButton" prefWidth="160" styleClass="add-button" text="+ Add User" />
            </HBox>

            <!-- Table Section -->
            <TableView fx:id="userTable" prefHeight="850.0" styleClass="table-view">
                <columns>
                    <TableColumn prefWidth="150.0" text="User ID" />
                    <TableColumn prefWidth="250.0" text="Name" />
                    <TableColumn prefWidth="300.0" text="Email" />
                    <TableColumn prefWidth="200.0" text="Position" />
                    <TableColumn prefWidth="200.0" text="Status" />
                    <TableColumn prefWidth="150.0" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
