<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autorideapp.autoride.EditCarController"
            prefWidth="400" prefHeight="350">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Edit Car Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="35"/>
                    <ColumnConstraints percentWidth="65"/>
                </columnConstraints>

                <Label text="Brand:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="brandField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Model:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="modelField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Plate Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="plateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusCombo" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Available"/>
                            <String fx:value="Unavailable"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Image:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <ImageView fx:id="carImageView" fitWidth="100" fitHeight="60" preserveRatio="true"/>
                    <Button text="Browse" fx:id="browseButton"/>
                </HBox>
            </GridPane>

            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button text="Save" fx:id="saveButton"/>
                <Button text="Cancel" fx:id="cancelButton"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
