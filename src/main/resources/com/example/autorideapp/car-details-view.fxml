<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.autorideapp.autoride.CarDetailsController"
      spacing="30"
      alignment="TOP_CENTER"
      style="-fx-background-color: #f7f7f7;">

    <!-- CAR IMAGE -->
    <ImageView fx:id="carImage"
               fitWidth="900"
               preserveRatio="true" />

    <!-- DOT INDICATORS -->
    <HBox alignment="CENTER" spacing="8">
        <Label text="●" style="-fx-text-fill: #888;" />
        <Label text="●" style="-fx-text-fill: #888;" />
        <Label text="●" style="-fx-text-fill: #888;" />
        <Label text="●" style="-fx-text-fill: #888;" />
        <Label text="●" style="-fx-text-fill: #000;" />
        <Label text="●" style="-fx-text-fill: #888;" />
    </HBox>

    <!-- WHITE DETAILS BOX -->
    <VBox spacing="25"
          style="-fx-background-color: white;
                 -fx-padding: 30;
                 -fx-border-color: #e0e0e0;
                 -fx-border-radius: 10;
                 -fx-background-radius: 10;"
          maxWidth="900">

        <!-- HEADER -->
        <HBox spacing="15">
            <Label text="Book this Car"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <Label fx:id="carName"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        </HBox>

        <!-- MAIN CONTENT -->
        <HBox spacing="40" alignment="TOP_LEFT">

            <!-- LEFT: SPECS (all text combined) -->
            <VBox spacing="10" prefWidth="600">
                <Label fx:id="specsLabel"
                       wrapText="true"
                       style="-fx-font-size: 15px; -fx-line-spacing: 4;" />
            </VBox>

            <!-- RIGHT: PRICE / DATES / TOTAL -->
            <VBox spacing="15" prefWidth="250">

                <Label text="Price"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                <Label fx:id="priceValue"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="Pick up and Return Date"
                       style="-fx-font-size: 14px;" />

                <DatePicker fx:id="startDatePicker" prefWidth="200"/>
                <DatePicker fx:id="endDatePicker" prefWidth="200"/>

                <Label text="Total"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                <Label fx:id="totalLabel"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #008000;" />

                <!-- BUTTONS -->
                <HBox spacing="20">
                    <Button text="Cancel"
                            style="-fx-background-color: #ddd;
                                   -fx-padding: 8 25;
                                   -fx-font-size: 14;" />

                    <Button fx:id="bookButton"
                            text="Book"
                            onAction="#handleBook"
                            style="-fx-background-color: #28a745;
                                   -fx-text-fill: white;
                                   -fx-padding: 8 25;
                                   -fx-font-size: 14;" />
                </HBox>

            </VBox>
        </HBox>

    </VBox>

</VBox>