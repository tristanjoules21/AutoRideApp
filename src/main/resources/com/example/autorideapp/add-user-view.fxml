<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.autorideapp.autoride.AddUserController"
      spacing="20" alignment="TOP_LEFT"
      prefWidth="600"
      style="-fx-padding: 30; -fx-background-color: #f8f8f8;">

    <Label text="Add New User" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="30">
        <VBox spacing="5">
            <Label text="Full Name"/>
            <TextField fx:id="fullNameField" promptText="Enter full name"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Email"/>
            <TextField fx:id="emailField" promptText="Enter email"/>
        </VBox>
    </HBox>

    <VBox spacing="5">
        <Label text="Position"/>
        <ComboBox fx:id="positionComboBox" prefWidth="530" promptText="Select position"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Password"/>
        <PasswordField fx:id="passwordField" promptText="Enter password"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Confirm Password"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancelClick"/>
        <Button fx:id="registerButton" text="Register User" onAction="#onAddUserClick"
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
    </HBox>

</VBox>