<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.autorideapp.autoride.LoginController"
      prefHeight="600.0" prefWidth="779.0"
      alignment="CENTER"
      spacing="20"
      stylesheets="@style.css">

    <!-- Card Container -->
    <VBox alignment="CENTER" spacing="15" styleClass="login-card" maxWidth="400">

        <Label styleClass="label-title" text="AutoRide" />

        <VBox spacing="10" maxWidth="350">
            <Label styleClass="label-field" text="Email Address" />
            <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field" />

            <Label styleClass="label-field" text="Password" />
            <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field" />
        </VBox>

        <Button fx:id="signinBtn" onAction="#onSignInClick" styleClass="button-signIn" text="Sign In" />

        <Label fx:id="messageLabel" visible="false" />

        <VBox alignment="CENTER_LEFT" spacing="5" styleClass="demo-container" maxWidth="350">
            <Label styleClass="label-demo" text="Demo Admin Account:" />
            <HBox spacing="5" styleClass="demo-box">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Admin:" />
                <Label styleClass="label-demo-info" text="admin@autoride.com / admin123" />
            </HBox>
        </VBox>

    </VBox>

</VBox>
